        <filter-name>guiceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>biz.freshcode.learn.gwtp.server.dispatch.GuiceServletConfig</listener-class>
    </listener>

