<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='Mod1'>
    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>

    <!-- We need the JUnit module in the main module,               -->
    <!-- otherwise eclipse complains (Google plugin bug?)           -->
    <inherits name='com.google.gwt.junit.JUnit'/>

    <!-- Inherit the default GWT style sheet.  You can change       -->
    <!-- the theme of your GWT application by uncommenting          -->
    <!-- any one of the following lines.                            -->
    <inherits name='com.google.gwt.user.theme.standard.Standard'/>
    <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
    <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

    <!-- Other module inherits                                      -->
    <inherits name='com.sencha.gxt.ui.GXT'/>
    <inherits name="com.sencha.gwt.uibinder.UiBinder"/>

    <!--Trying to debug client bundles... not sure if this is necessary-->
    <inherits name="com.google.gwt.resources.Resources"/>

    <!-- GZip the output files by default -->
    <inherits name='com.google.gwt.precompress.Precompress'/>

    <inherits name="com.google.gwt.logging.Logging"/>
    <!--Don't want the logging on the pop in top-left of screen -->
    <set-property name="gwt.logging.popupHandler" value="DISABLED"/>

    <!-- Specify the app entry point class.                         -->
    <entry-point class='biz.freshcode.learn.gwt.client.EntryPoint'/>

    <!-- Disable style obfuscation for debug purposes -->
    <!--<set-configuration-property name="CssResource.style" value="pretty"/>-->

    <!-- Specify the paths for translatable code                    -->
    <source path='client'/>
    <source path='shared'/>

    <!-- Dev quick compile: for Chrome -->
    <!--Not working ?! Still compiling 6 permutations...
    <set-property name="user.agent" value="safari"/>-->

    <!-- TODO: How about some 'servlet' elements?-->
</module>
