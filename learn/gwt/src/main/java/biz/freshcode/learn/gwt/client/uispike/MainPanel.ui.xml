<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:container='urn:import:com.sencha.gxt.widget.core.client.container'
             xmlns:gxt='urn:import:com.sencha.gxt.widget.core.client'
             xmlns:my='urn:import:biz.freshcode.learn.gwt.client.uispike'
        >

    <ui:style>
        .highlight {
            background-color: #e0ffff;
        }
    </ui:style>

    <ui:with field="config" type="biz.freshcode.learn.gwt.client.uispike.MainPanel.UiConfig"/>

    <container:Viewport styleName="{style.highlight}">
        <container:BorderLayoutContainer>
            <!--<container:north>-->
            <!--<g:HTMLPanel>-->
            <!--<p>Hello</p>-->
            <!--</g:HTMLPanel>-->
            <!--</container:north>-->
            <container:west layoutData="{config.westLayout}">
                <!-- NOTE: We must have some sort of container here... having another control directly messes up resizing -->
                <gxt:ContentPanel headingText="West Heading">
                    <my:ControlPanel/>
                </gxt:ContentPanel>
            </container:west>
            <container:center>
                <gxt:ContentPanel>
                    <g:HTMLPanel>
                        <p>This is some more HTML</p>
                    </g:HTMLPanel>
                </gxt:ContentPanel>
            </container:center>
        </container:BorderLayoutContainer>
    </container:Viewport>
</ui:UiBinder>
