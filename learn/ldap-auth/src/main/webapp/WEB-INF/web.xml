<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>LDAP Auth demo project</display-name>


    <!--  Steps to get this working....
    Add this to $CATALINA_HOME/conf/tomcat-users.xml:
        <role rolename="manager-gui"/>
        <role rolename="tomcat"/>
        <user = username="tomcat" password="tomcat" roles="manager-gui,tomcat"/>
    Enable HTTPS in $CATALINA_HOME/conf/server.xml
    -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>everything</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>

        <auth-constraint>
            <role-name>tomcat</role-name>
        </auth-constraint>

        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <!-- NOTE: This will automatically use the realm defined in server.xml -->
        <realm-name>Login with tomcat x2</realm-name>
    </login-config>

    <security-role>
        <role-name>tomcat</role-name>
    </security-role>
</web-app>
